    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Kullanıcıyı silmek istediğinize eminmisiniz ?</h3>
<div>
    <hr />
    <form asp-action="Delete" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Adı:</label>
                    <input asp-for="FirstName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Soyadı:</label>
                    <input asp-for="LastName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenderName" class="control-label">Cinsiyet:</label>
                    <input asp-for="GenderName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="GenderName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label">Doğum Tarihi:</label>
                    <input asp-for="DateOfBirth" class="form-control" readonly="readonly" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Kulanıcı Adı:</label>
                    <input asp-for="UserName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Şifre:</label>
                    <input asp-for="Password" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email:</label>
                    <input asp-for="Email" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adress" class="control-label">Adres:</label>
                    <input asp-for="Adress" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="form-group">
            <input type="submit" value="Sil" class="btn btn-primary" />
            <a class="btn btn-info" asp-action="Index">Listeye Geri Dön</a>
        </div>
    </form>
